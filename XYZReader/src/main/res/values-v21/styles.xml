<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.Bacon" parent="@style/AppTheme">
        <item name="android:windowEnterTransition">@transition/detial_window_enter_transition</item>
        <item name="android:windowReturnTransition">@transition/detial_window_exit_transition</item>
    </style>

    <style name="Theme.Bacon.Detail" parent="@style/AppTheme">
        <item name="android:windowEnterTransition">@transition/detial_window_enter_transition</item>
        <item name="android:windowReturnTransition">@transition/detial_window_exit_transition</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


</resources>